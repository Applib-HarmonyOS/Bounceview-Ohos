<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="800"
        ohos:orientation="vertical"
        ohos:padding="2fp"
        ohos:background_element="#FF0086AE"
        ohos:alignment="center"
        >
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="Popup window"
        ohos:text_size="18fp"
        ohos:text_alignment="center"
        ohos:text_color="#ffffff"
        ohos:text_weight="700"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#bde9f4"
        ohos:top_margin="5fp"
        ohos:bottom_margin="5fp"
        ohos:alignment="center"
        ohos:left_margin="10fp"
        ohos:right_margin="10fp">
        <Text
            ohos:height="match_content"
            ohos:id="$+id:txt_PopDia"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:margin="10px"
            ohos:text="Lorem Ipsum "
            ohos:text_alignment="center"
            ohos:text_size="17fp"
            ohos:top_padding="5fp"
            ohos:bottom_padding="5fp"
            ohos:text_weight="700"/>
    </DirectionalLayout>
</DirectionalLayout>