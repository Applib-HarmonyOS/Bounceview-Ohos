<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:top_margin="50fp"
    ohos:id="$+id:listlayout"
   ohos:width="match_parent"
   ohos:height="match_content"
   ohos:bottom_margin="4px"
   ohos:left_margin="16px"
   ohos:right_margin="16px"
   ohos:alignment="center"
    ohos:background_element="$graphic:button_background"
    ohos:orientation="vertical"
    >

        <Text
            ohos:top_margin="20fp"
            ohos:bottom_margin="20fp"
            ohos:id="$+id:textViewListItem"
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:alignment="center"
            ohos:align_parent_bottom="true"
            ohos:text_size="30fp"
            ohos:text=""
            ohos:layout_alignment="center"
            ohos:text_alignment="center"/>
</DirectionalLayout>