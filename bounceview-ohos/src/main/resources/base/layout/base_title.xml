<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:id="$+id:base_title_xml">
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:id="$+id:base_title_text"
        ohos:text_size="22fp"
        ohos:text_color="black"
        ohos:text_weight="700"
        ohos:top_margin="5fp"
        ohos:left_margin="10fp"
        ohos:right_margin="10fp"
        ohos:visibility="hide"/>
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="5fp"
        ohos:left_margin="10fp"
        ohos:right_margin="10fp"
        ohos:id="$+id:base_sub_title_text"
        ohos:text_size="18fp"
        ohos:text_color="black"
        ohos:text_weight="500"
        ohos:visibility="hide"/>
</DirectionalLayout>